{
  "name": "express-ts-template",
  "version": "1.0.0",
  "description": "Express typescript project starter template.",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "prepare": "husky",
    "dev": "nodemon src/server.ts",
    "format": "prettier --check .",
    "format:fix": "prettier --write",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "test": "jest --watch --runInBand"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "http-errors": "^2.0.0",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.5",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,html,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/theanujdev/express-ts-template.git"
  },
  "keywords": [
    "Express",
    "Typescript"
  ],
  "author": "Anuj Sharma",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/theanujdev/express-ts-template/issues"
  },
  "homepage": "https://github.com/theanujdev/express-ts-template#readme"
}
