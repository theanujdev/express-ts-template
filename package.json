{
  "name": "express-ts-template",
  "version": "1.0.0",
  "description": "Express typescript project starter template.",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "dev": "node dist/server.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write",
    "lint": "eslint .",
    "lint:fix": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/theanujdev/express-ts-template.git"
  },
  "keywords": [
    "Express",
    "Typescript"
  ],
  "author": "Anuj Sharma",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/theanujdev/express-ts-template/issues"
  },
  "homepage": "https://github.com/theanujdev/express-ts-template#readme",
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.7.5",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,html,md}": [
      "prettier --write"
    ]
  }
}
